<UserControl x:Class="WPFClient.views.UserMessage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WPFClient.views"
             mc:Ignorable="d" Margin="75,5,25,5">
    <Border BorderBrush="#7F000000" BorderThickness="1">
        <StackPanel MinWidth="200">
            <RichTextBox x:Name="message"  Background="{x:Null}" BorderBrush="{x:Null}"/>
            <Label x:Name="date" Content="Label" HorizontalAlignment="Right" VerticalAlignment="Bottom"/>
        </StackPanel>
    </Border>
</UserControl>
